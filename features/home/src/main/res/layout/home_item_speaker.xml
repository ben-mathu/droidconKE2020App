<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="speakerUIModel"
            type="com.android254.droidconKE2020.core.models.SpeakerUIModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <View
            android:id="@+id/speakerImgBg"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/promo_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
            android:id="@+id/speakerImg"
            imageUrl="@{speakerUIModel.speakerAvatar}"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@id/speakerImgBg"
            app:layout_constraintEnd_toEndOf="@id/speakerImgBg"
            app:layout_constraintStart_toStartOf="@id/speakerImgBg"
            app:layout_constraintTop_toTopOf="@id/speakerImgBg"
            app:shape_mode="circle"
            app:stroke_color="@color/colorAquaMarine"
            app:stroke_width="2dp"
            tools:src="@drawable/greg" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal"
            android:text="@{speakerUIModel.speakerName}"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/speakerImgBg"
            tools:text="@string/dummy_keynot_speaker" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>